FROM mcr.microsoft.com/dotnet/sdk:6.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
WORKDIR /src
COPY ["Service/ECampus.Services.Auth.csproj", "Service/"]
RUN dotnet restore "Service/ECampus.Services.Auth.csproj"
COPY . .
WORKDIR "/src/ECampus.Services.Auth"
RUN dotnet build "ECampus.Services.Auth.csproj" -c Release -o /app/build

FROM mcr.microsoft.com/dotnet/sdk:6.0 AS migration
WORKDIR /src
COPY . .
RUN dotnet restore "MigrationsApplier/MigrationsApplier.csproj"
COPY . .
WORKDIR "/src/MigrationsApplier"
RUN dotnet build "MigrationsApplier.csproj" -c Release -o /app/migration

FROM build AS publish
RUN dotnet publish "ECampus.Services.Auth.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /migration
COPY --from=migration /app/migration .

WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "ECampus.Services.Auth.dll"]